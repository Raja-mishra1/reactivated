{
    "compilerOptions": {
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@client/*": ["client/*"]
        },
        // "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es6",

            "es2016.array.include",
            "es2018.promise",
            "es2017.object",
            "es2019.object",
            "es2019.array"
        ],
        "noErrorTruncation": true,
        // "strictFunctionTypes": false,

        "skipLibCheck": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": false
    },
    "include": ["./webpack.config.tsx", "./client/**/*"]
}
