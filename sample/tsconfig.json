{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        // "noUnusedParameters": true,
        // "noUnusedLocals": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "lib": [
            "dom",
            // "dom.iterable",
            "es6",

            // "es2016.array.include",
            // "es2018.promise",
            // "es2017.object",
            // We need fromEntries in forms.
            "es2019.object"
            // "es2019.array"
        ],
        "paths": {
            "@client/*": ["client/*"]
        }
    },
    "include": ["./client/**/*"]
}
